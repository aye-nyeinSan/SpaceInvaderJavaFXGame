<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="250.0" prefWidth="250.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.invaders.controller.menuController">
    <children>
      <ImageView fitHeight="411.0" fitWidth="250.0" layoutX="-1.0" layoutY="-156.0">
         <image>
            <Image url="@com/example/invaders/assets/aesthetic-game-over.gif" />
         </image>
      </ImageView>
        <Button layoutX="35.0" layoutY="147.0" mnemonicParsing="false" onAction="#onStartOver" text="Start Over">
            <font>
                <Font name="Agency FB" size="18.0" />
            </font>
        </Button>
        <Button layoutX="142.0" layoutY="147.0" mnemonicParsing="false" onAction="#onHome" prefHeight="27.0" prefWidth="71.0" text="Home">
            <font>
                <Font name="Agency FB" size="18.0" />
            </font>
        </Button>
        <Text fill="#e75e3c" layoutX="97.0" layoutY="116.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Score">
            <font>
                <Font name="Agency FB" size="24.0" />
            </font>
        </Text>
        <Text fx:id="scoreVar" fill="#e75e3c" layoutX="156.0" layoutY="116.0" strokeType="OUTSIDE" strokeWidth="0.0">
            <font>
                <Font name="Agency FB" size="24.0" />
            </font>
        </Text>
        <Button layoutX="88.0" layoutY="199.0" mnemonicParsing="false" onAction="#onQuitGameConsole" prefHeight="27.0" prefWidth="71.0" text="Quit">
            <font>
                <Font name="Agency FB" size="18.0" />
            </font>
        </Button>
    </children>
</AnchorPane>
